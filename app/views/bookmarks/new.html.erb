<div class="container mt-5">
  <h1>Add movie to <%= @list.name %></h1>
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment %>
    <%= f.association :movie %>
    <%= f.button :submit, class: "btn btn-success"%>
  <% end %>
<br>
  <%= link_to "Back home", lists_path, class: "btn btn-outline-warning" %>
</div>
