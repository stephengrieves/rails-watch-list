<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path('cinema.jpg')%>);">
  <div class="container">
<h1><%= @list.name %></h1>
<br>
  <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-success" %>
  </div>
</div>

<div class="container mt-5">

  <div class="cards">
  <% @list.bookmarks.each do | bookmark | %>
    <div class="card" style="width: 18rem;">
      <%= image_tag bookmark.movie.poster_url, class:"card-img-top"%>
        <div class="card-body">
      <%= bookmark.movie.title %>
        <%= link_to "Remove",
                    bookmark_path(bookmark),
                    method: :delete,
                    data: { confirm: "Are you sure?" }%>
        </div>
      </div>
    <% end %>
  </div>
<br>
  <%= link_to "Back home", lists_path, class: "btn btn-outline-warning" %>

</div>
